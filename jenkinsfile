pipeline {
    agent any

    stages {
        stage('Git Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/PabloEscales/iac-petclinic.git'
            }
        }

        stage('Az login') {
            steps {
                sh "az login --tenant "
                sh "az account set --subscription "
            }
}

        stage('Terraform') {
            steps {
                sh 'terraform --version'
                dir('terraform') {
                    sh 'terraform init'
                    sh 'terraform apply -auto-approve'
                }
            }
        }
    }
}         
